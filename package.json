  "license": "MIT",
  "scripts": {
    "build-dev": "run-p build:js-dev build:css copy",
    "build": "run-p build:js build:css copy",
    "heroku-postbuild": "run-p build:js build:css copy",
    "build:js-dev": "webpack --mode development --config webpack.config.js",
    "build:js": "webpack --config webpack.config.js",
    "build:css": "node-sass src/index.scss public/css/index.css",
    "copy": "mkdir -p public && cp -rf static/* public/",
    "watch": "webpack --mode development --config webpack.config.js --watch",
    "clean": "rm -rf public"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babel-loader": "^8.0.4",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "axios": "^0.18.0"
  }
}
