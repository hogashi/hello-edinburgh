<% @tweets.each do |tweet| %>
  <div class="tweet" data-id="<%= tweet[:id] %>">
    <div class="user">
      <span class="icon">
        <img src="<%= tweet[:user][:icon] %>">
      </span>
      <span class="name">
        <%= tweet[:user][:name] %>
      </span>
      <span class="screenName">
        @<%= tweet[:user][:screen_name] %>
      </span>
      <span class="created_at">
        <a href="<%= tweet[:tweet_url] %>">
          <%= tweet[:created_at] %>
        </a>
      </span>
    </div>
    <p class="text">
      <%= tweet[:text] %>
    </p>
    <div class="media">
      <% tweet[:media_urls].each do |media_url| %>
        <img src="<%= media_url %>">
      <% end %>
    </div>
  </div>
<% end %>
