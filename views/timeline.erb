<div id="timeline">
  <p id="indicator"><span>sec: <span id="timer">0</span></span><button id="clearButton">clear</button></p>
  <% if logged_in? %>
    <div id="tweets"></div>
    <p id="message"><%= @message %></p>
    <div>
      <a href="/logout">logout</a>
    </div>
  <% else %>
    <div>
      <a href="/auth/twitter">login</a>
    </div>
  <% end %>
</div>
